# Force HTTPS
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# Rediriger sans-www → www
RewriteCond %{HTTP_HOST} ^tkarea\.com$ [NC]
RewriteRule ^(.*)$ https://www.tkarea.com/$1 [R=301,L]

# Content-Type correct pour sitemap XML
AddType application/xml .xml

# Pages Next.js — servir index.html dans chaque dossier
DirectoryIndex index.html

# Erreur 404 → page Next.js
ErrorDocument 404 /404.html
